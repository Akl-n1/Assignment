@model List<Student>
<table class="table table-bordered table-hover">
	<tr>
		<th>الاسم</th>
		<th>العمر</th>
		<th>الصوره</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>
				<img src="/Images/@item.ImgUrl" width="60px" />
			</td>
			<td>
				<a asp-action="StudentDetails" asp-route-id="@item.Id">Details</a>
			</td>
		</tr>
	}
</table>
