@model Day02_MVC.ViewModel.CourseDepartmentViewModel

@{
	ViewData["Title"] = "Create";
}

<form action="/Course/Create" method="post">
	<input type="text" hidden class="form-control" id="Id" name="Id">
	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name" />
	</div>
	<div class="form-group">
		<label for="Name">Degree</label>
		<input type="text" class="form-control" id="Degree" name="Degree" placeholder="Enter Degree" />
	</div>
	<div class="form-group">
		<label for="MinDegree">MinDegree</label>
		<input type="text" class="form-control" id="MinDegree" name="MinDegree" placeholder="Enter MinDegree" />
	</div>

	<div class="form-group">
		<label for="DeptId">Department</label>
		<select class="form-control" id="DeptId" name="DeptId">
			<option value="" selected disabled>----------------- Select option-----------------</option>
			@foreach (var dept in Model.departments)
			{
				<option value="@dept.Id">@dept.Name</option>
			}
		</select>
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/Course/Index" class="btn btn-danger">Cancle</a>

</form>



