@model Day02_MVC.ViewModel.CourseDepartmentViewModel

@{
	ViewData["Title"] = "Edit";
}

<form action="/Course/Edit" method="post">
	<input type="text" hidden class="form-control" id="Id" name="Id" value="@Model.Id">
	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Enter Name" />
	</div>
	<div class="form-group">
		<label for="Age">Degree</label>
		<input type="number" class="form-control" id="Age" name="Degree" value="@Model.Degree" placeholder="Enter Degree" />
	</div>
	<div class="form-group">
		<label for="Age">MinDegree</label>
		<input type="number" class="form-control" id="Age" name="MinDegree" value="@Model.MinDegree" placeholder="Enter MinDegree" />
	</div>
	<div class="form-group">
		<label for="DeptId">Department</label>
		<select class="form-control" id="DeptId" name="DeptId">
			<option value="" selected disabled>----------------- Select option-----------------</option>
			@foreach (var dept in Model.departments)
			{
				if (dept.Id == Model.DeptId)
				{
					<option value="@dept.Id" selected>@dept.Name</option>
				}
				else
				{
					<option value="@dept.Id">@dept.Name</option>
				}
			}
		</select>
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/Course/Index" class="btn btn-danger">Cancle</a>
</form>


