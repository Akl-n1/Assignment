@{
	ViewData["Title"] = "Edit";
}

<form method="post" action="/Department/Edit">
	<input type="hidden" name="Id" value="@Model.Id" />
	<div class="form-group">
		<label for="Name">Department Name</label>
		<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
	</div>
	<div class="form-group">
		<label for="MgrName">Manager Name</label>
		<input type="text" class="form-control" id="MgrName" name="MgrName" value="@Model.MgrName" />
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/Department/Index" class="btn btn-secondary">Back to List</a>
</form>
