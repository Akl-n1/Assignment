@model Day02_MVC.ViewModel.StudentDepartmentViewModel

@{
	ViewData["Title"] = "Create";
}

<form action="/Student/Create" method="post">
	<input type="text" hidden class="form-control" id="EmpId" name="Id">

	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name" />
	</div>

	<div class="form-group">
		<label for="Age">Age</label>
		<input type="number" class="form-control" id="Age" name="Age" placeholder="Enter Age" />
	</div>

	<div class="form-group">
		<label for="DeptId">Department</label>
		<select class="form-control" id="DeptId" name="DeptId">
			<option value="" selected disabled>----------------- Select option -----------------</option>
			@foreach (var dept in Model.Departments)
			{
				<option value="@dept.Id">@dept.Name</option>
			}
		</select>
	</div>

	<div class="form-group mt-3">
		<label>Courses</label><br />
		@foreach (var course in Model.Courses)
		{
			<div class="form-check">
				<input type="checkbox" class="form-check-input" id="course_@course.Id"
					   name="SelectedCourseIds" value="@course.Id" />
				<label class="form-check-label" for="course_@course.Id">@course.Name</label>
			</div>
		}
	</div>

	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/Student/Index" class="btn btn-danger">Cancel</a>
</form>
