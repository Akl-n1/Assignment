@model Day02_MVC.ViewModel.StudentDepartmentViewModel

@{
	ViewData["Title"] = "Edit";
}

<form action="/Student/Edit" method="post">
	<input type="text" hidden class="form-control" id="Id" name="Id" value="@Model.Id">
	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Enter Name" />
	</div>
	<div class="form-group">
		<label for="Age">Age</label>
		<input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" placeholder="Enter Age" />
	</div>
	<div class="form-group">
		<label for="DeptId">Department</label>
		<select class="form-control" id="DeptId" name="DeptId">
			<option value="" selected disabled>----------------- Select option-----------------</option>
			@foreach (var dept in Model.Departments)
			{
				if (dept.Id == Model.DeptId)
				{
					<option value="@dept.Id" selected>@dept.Name</option>
				}
				else
				{
					<option value="@dept.Id">@dept.Name</option>
				}
			}
		</select>
	</div>
	<div class="form-group mt-3">
		<label>Courses</label>
		@foreach (var course in Model.Courses)
		{
			<div class="form-check">
				<input type="checkbox"
					   name="SelectedCourseIds"
					   value="@course.Id"
					   class="form-check-input"
					   @(Model.SelectedCourseIds.Contains(course.Id) ? "checked" : "") />
				<label class="form-check-label">@course.Name</label>
			</div>
		}
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/Student/Index" class="btn btn-danger">Cancle</a>
</form>

