@using System.Linq
@model Day02_MVC.Models.Teacher
@{
	ViewData["Title"] = "Details";
}

<div class="card shadow-lg p-4 mb-4 bg-white rounded">
	<div class="card-body">
		<h2 class="card-title">@Model.Name</h2>
		<p><strong>Department:</strong> @Model.Department?.Name</p>
		<p><strong>Salary:</strong> @Model.Salary</p>
		<p><strong>Address:</strong> @Model.Address</p>
	</div>
</div>

<div class="card shadow-lg p-4 mb-4 bg-light rounded">
	<div class="card-body">
		<h3 class="card-title">Course</h3>

		@if (Model.Course != null)
		{
			<p><strong>Course:</strong> @Model.Course.Name</p>
			<p><strong>Department:</strong> @Model.Course.Department?.Name</p>
			<p><strong>Teachers in this course:</strong></p>

			@if (Model.Course.Teachers != null && Model.Course.Teachers.Any())
			{
				<ul class="list-group list-group-flush ms-3">
					@foreach (var t in Model.Course.Teachers)
					{
						<li class="list-group-item">@t.Name</li>
					}
				</ul>
			}
			else
			{
				<span class="text-muted">No teachers assigned to this course</span>
			}
		}
		else
		{
			<p class="text-muted">No course assigned for this teacher.</p>
		}
	</div>
</div>

<a href="/Teacher/Index" class="btn btn-primary">Back to List</a>
